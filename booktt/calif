[% PERL -%]
use Data::Dumper;

my $notas = $stash->get('notas');
open my $f, $notas or die "can't find file '$notas'\n";

my %c = map { /(\D+)\s+(\d+[,.']?\d*)/ } <$f>;
my @c = sort keys %c;
my @d = map { +{ name => $_, cal => $c{$_} } } @c;
#print Dumper \@d;

$stash->set('calificaciones', \@d);
[% END -%]

\begin{document}
\bodytext{BGCOLOR="#ffffff"}
